<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityActivity"
    android:background="#ff34d26f"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Smooth Edges"
        android:id="@+id/btnSmooth"
        android:layout_gravity="center"
        android:layout_above="@+id/btnLarge2D"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:layout_weight="0.30"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:onClick="btnSmoothClick" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Irregular Edges"
        android:id="@+id/btnIrregular"
        android:layout_gravity="top|center_horizontal"
        android:layout_above="@+id/btnSolid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:layout_weight="0.30"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:onClick="btnIrregularClick" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Solid"
        android:id="@+id/btnSolid"
        android:layout_gravity="center"
        android:layout_below="@+id/btnIrregular"
        android:layout_marginBottom="75dp"
        android:layout_weight="0.30"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:onClick="btnSolidClick" />
</LinearLayout>
