<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="ie.gmit.computing.MainActivity"
    android:background="#ff34d26f"
    android:orientation="vertical"
    >

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/btnCamera"
        android:text="Use Camera"
        android:layout_gravity="center"
        android:layout_alignBaseline="@+id/btnHome"
        android:layout_alignBottom="@+id/btnHome"
        android:layout_alignLeft="@+id/btnHome"
        android:layout_alignStart="@+id/btnHome"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="55dp"
        android:layout_weight="0.30"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:onClick="btnCameraClick" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/btnHome"
        android:text="Home"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnCamera"
        android:layout_alignStart="@+id/btnCamera"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="55dp"
        android:layout_weight="0.30"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:onClick="btnHomeClick" />
</LinearLayout>
